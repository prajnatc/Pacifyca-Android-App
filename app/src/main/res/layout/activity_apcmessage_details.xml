<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/splash_bg_content">

    <include
        android:id="@+id/toolbar_actionbar"
        layout="@layout/toolbar_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_actionbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/message_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/status_bar_green"
                    android:layout_height="wrap_content">

                    <com.thinkpace.pacifyca.widget.RoboTextView
                        android:id="@+id/message_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text="@string/message_details"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16_sp"
                        app:fontType="robotoMedium" />

                    <com.thinkpace.pacifyca.widget.RoboTextView
                        android:id="@+id/date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/message_title"
                        android:layout_alignBottom="@+id/message_title"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/padding_10dp"
                        android:layout_marginTop="@dimen/padding_10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_16_sp"
                        app:fontType="robotoMedium" />

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/other_info_lyt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:elevation="2dp"
                    card_view:cardCornerRadius="3dp"
                    card_view:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/student_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_16_sp"
                            app:fontType="robotoBold" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:id="@+id/student_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontType="robotoMedium" />


                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/institution_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_16_sp"
                            app:fontType="robotoBold" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:id="@+id/institution_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontType="robotoMedium" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/message_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_16_sp"
                            app:fontType="robotoBold" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:id="@+id/message_content_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontType="robotoMedium" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/course_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_16_sp"
                            app:fontType="robotoBold" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:id="@+id/course_name_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontType="robotoMedium" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:text="@string/academic_year"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/text_16_sp"
                            app:fontType="robotoBold" />

                        <com.thinkpace.pacifyca.widget.RoboTextView
                            android:id="@+id/academic_year_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:fontType="robotoMedium" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <include layout="@layout/no_messages_layout" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
